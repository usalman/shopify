<div class="blog-posts-section">
  {% if section.settings.heading != blank %}
    <h2 class="blog-posts-heading">{{ section.settings.heading }}</h2>
  {% endif %}

  <div class="blog-posts-grid">
    {%- for post in shop.metaobjects.blog_post.values limit: 12 -%}
      <div class="blog-post-card">
        <a href="{{ post.link.value }}" target="_blank">
          <img 
            src="{{ post.img_url.value }}" 
            alt="{{ post.title.value | escape }}" 
            class="blog-post-image"
            height="72"
            width="72"
          >
        </a>
        <div class="blog-post-content">
          <h3 class="blog-post-title">{{ post.title.value }}</h3>
          <p class="blog-post-excerpt">{{ post.excerpt.value }}</p>
          <a href="{{ post.link.value }}" class="blog-post-read">Read Article</a>
        </div>
      </div>
    {%- endfor -%}
  </div>
</div>

<style>

  .blog-posts-section {
    margin: 8rem 0;
  }

.blog-posts-heading {
  font-size: 3rem;
  margin-bottom: 30px;
  text-align: center;
}

.blog-posts-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 20px;
  margin: 0 5%;
}

@media (min-width: 640px) {
  .blog-posts-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (min-width: 1024px) {
  .blog-posts-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

.blog-post-card {
  border: 1px solid #ddd;
  border-radius: 8px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  background: #fff;
}

.blog-post-image {
  width: 100%;
  height: 200px;
  object-fit: cover;
}

.blog-post-content {
  padding: 15px;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.blog-post-title {
  font-size: 2rem;
  font-weight: 600;
  margin-bottom: 10px;
}

.blog-post-excerpt {
  flex-grow: 1;
  font-size: 1.75rem;
  color: #555;
  margin-bottom: 15px;
}

.blog-post-read {
  font-weight: bold;
  text-decoration: underline;
  color: #000;
}
</style>

{% schema %}
{
  "name": "Blog Posts",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Latest Blog Posts"
    }
  ],
  "presets": [
    {
      "name": "Blog Posts"
    }
  ]
}
{% endschema %}